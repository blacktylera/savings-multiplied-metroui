doctype html
html(lang="en-US")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title My Title
    link(rel="stylesheet" href="/vendor/Metro-UI-CSS/css/metro-bootstrap.css")
    link(rel="stylesheet" href="css/main.css")

  body
    // [if lt IE 9]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]

    .metro
      .grid.fluid
        .row
          .span12.bg-blue.text-center
            .row.top-info
              ul.span3.offset8.unstyled.inline
                li.sign sign in
                li.sign |
                li.sign sign up

              .grid.maininfo
                .row.span12.bg-white
                  .span5.offset1.bg-white.top-pic
                    img(src="https://raw.githubusercontent.com/elizabrock/SavingsMultipliedRedux/master/app/assets/images/savings-multiplied-logo.png")
                  .span5.bg-white.top-nav
                    ul.unstyled.inline
                      li#about.acbp About
                      li#contact.acbp Contact
                      li#blog.acbp Blog
                      li#press.acbp Press
                    .sign where parents of multiples save, sell & share
            .grid.navbar
              .row.bg-pink
                nav.span9.offset1
                  ul.unstyled.inline.text-center
                    li.buysell Buy
                    li.buysell Sell
                    li.buysell How it Works
                    li.buysell Links
                    li.buysell Community
                    input(type="text" placeholder="search")

            .grid.secondary-content
              .row
                .span1
                .span6
                  h2 We're making one aspect of life easier for parents of multiples:
                  h3 IMG buying and selling gently used sets of clothes!
                  SHOP NOW
                  img(src="https://raw.githubusercontent.com/elizabrock/SavingsMultipliedRedux/master/app/assets/images/homepage/tree.png")
                nav.span11.offset1
                  ul.horizontal-menu.text-left
                    li Buy
                    li Sell
                    li How it Works
                    li Links
                    li Community
                    .input-control.text.size4.margin10#search-top
                      input(type="text" placeholder="Search...")


            .grid.secondary-content
              .row
                .span6.offset1
                  h2 We're making one aspect of life easier for parents of mulitples:
                  img.place-left(src="https://raw.githubusercontent.com/elizabrock/SavingsMultipliedRedux/master/app/assets/images/owls/owl_bright_blue_64.png") 
                  h3 buying and selling gently used sets of clothes!
                  img(src="https://raw.githubusercontent.com/elizabrock/SavingsMultipliedRedux/master/app/assets/images/homepage/left_2_shop_now.png")
                .span4
                  .image-container.span12#image-list
                    img(src="https://raw.githubusercontent.com/elizabrock/SavingsMultipliedRedux/master/app/assets/images/children/twins.jpg")
                    .overlay-fluid
                      div.text-bold These are twins!!!
                  .image-container.span12#image-list
                    img(src="https://raw.githubusercontent.com/elizabrock/SavingsMultipliedRedux/master/app/assets/images/children/triplets.jpg")
                    .overlay-fluid
                      div.text-bold Triplets
                  .image-container.span12#image-list    
                    img(src="https://raw.githubusercontent.com/elizabrock/SavingsMultipliedRedux/master/app/assets/images/children/quads.jpg")
            .grid
              .row
                .span10.offset1.bg-white.connect-footer
                  ul.unstyled.inline.text-center
                    li.icon-facebook Facebook
                    li.icon-twitter Twitter
                    li.icon-comments-4 Message Boards
                    li.icon-dollar-2 Special Offers
            .grid
              .row
                .span12
                  ul.horizontal-menu.compact
                    li Link Here
                    li Link Here
                    li Link Here
                    li Link Here
                    li Link Here

    script(src="js/main.js")
